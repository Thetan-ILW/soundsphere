<style>
.team__container {
	margin-top: 130px;
	margin-bottom: 20px;
}

.team__avatar {
	border-radius: 40px;
}

.team__key-value {
	display: flex;
	justify-content: space-between;
}

.team__button {
	margin-top: 0.5em;
	margin-bottom: 0.5em;
}
</style>

<div class="is-hidden-mobile" style="position:relative;">
	<div class="page-banner" style="background-image:url('https://images.unsplash.com/photo-1637825891035-1930cbd564dd?q=80&w=1740&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');"></div>
</div>

<main class="container">
	<div class="columns">
		<div class="column">
			<div class="block">
				<div class="box team__container">
					<div class="block">
						<figure class="image is-2by1 is-fullwidth">
							<img class="team__avatar" src="https://cdn.discordapp.com/attachments/742425118331895870/1367081806494568468/waaah.png?ex=681349a5&is=6811f825&hm=c96dee84bba52037aedb7bde5ebf441096cad96229df46fb92813bc191d9de38&">
						</figure>
					</div>
					<div class="block">
						<h1 class="title is-4 is-spaced" align="center">Bread team 🍞🥖🇫🇷</h1>
						<h2 class="subtitle is-6" align="center">[BRED]</h2>
						<div class="separator"></div>
					</div>
					<div class="block">
						<%
							local together_since = os.date("%d.%m.%Y", 0)
							local together_since_html = os.date("%Y-%m-%d", 0)
						%>
						<div class="team__key-value">
							<p>Together since:</p>
							<time datetime="<%= together_since_html %>"><strong><%= together_since %></strong></time>
						</div>
						<div class="team__key-value">
							<p>Recent activity:</p>
							<p><strong>200 hours</strong></p>
						</div>
						<div class="team__key-value">
							<p>Players:</p>
							<p><strong>10 people</strong></p>
						</div>
						<div class="team__key-value">
							<p>ENPS:</p>
							<p><strong>28.18</strong></p>
						</div>
						<div class="team__key-value">
							<p>PP:</p>
							<p><strong>13817</strong></p>
						</div>
					</div>
					<div class="block">
						<button class="team__button button is-info is-fullwidth"><i class="fas fa-user-plus icon-margin-right"></i>Join</button>
						<button class="team__button button is-primary is-fullwidth"><i class="fas fa-wrench icon-margin-right"></i>Manage</button>
						<button class="team__button button is-info is-light is-fullwidth"><i class="fas fa-user-slash icon-margin-right"></i>Leave</button>
					</div>
				</div>
			</div>
		</div>
		<div class="column is-three-fifths-tablet is-three-fifths-desktop is-three-quarters-widescreen">
			<p>hello</p>
		</div>
	</div>
</main>
